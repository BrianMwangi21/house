<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ActionBar title="Fifteen Puzzle - Level 2"/>
  <GridLayout rows="auto,auto,auto,auto,auto" columns="*,*,*,*">
    <button row="0" col="0" text="reset" class="reset" tap="resetTap" />
    <label row="0" col="1" text=" " />
    <label row="0" col="2" colspan="2" text="{{ moves }}" />

    <Button row="1" col="0" id="b1-0-0" text="{{ b1 }}" class="{{ b1Cls }}" tap="squareTap" />
    <Button row="1" col="1" id="b2-0-1" text="{{ b2 }}" class="{{ b2Cls }}" tap="squareTap" />
    <Button row="1" col="2" id="b3-0-2" text="{{ b3 }}" class="{{ b3Cls }}" tap="squareTap" />
    <Button row="1" col="3" id="b4-0-3" text="{{ b4 }}" class="{{ b4Cls }}"  tap="squareTap" />

    <Button row="2" col="0" id="b5-1-0" text="{{ b5 }}" class="{{ b5Cls }}" tap="squareTap" />
    <Button row="2" col="1" id="b6-1-1" text="{{ b6 }}" class="{{ b6Cls }}" tap="squareTap" />
    <Button row="2" col="2" id="b7-1-2" text="{{ b7 }}" class="{{ b7Cls }}" tap="squareTap" />
    <Button row="2" col="3" id="b8-1-3" text="{{ b8 }}" class="{{ b8Cls }}"  tap="squareTap" />

    <Button row="3" col="0" id="b9-2-0" text="{{ b9 }}" class="{{ b9Cls }}" tap="squareTap" />
    <Button row="3" col="1" id="b10-2-1" text="{{ b10 }}" class="{{ b10Cls }}"  tap="squareTap" />
    <Button row="3" col="2" id="b11-2-2" text="{{ b11 }}" class="{{ b11Cls }}"  tap="squareTap" />
    <Button row="3" col="3" id="b12-2-3" text="{{ b12 }}" class="{{ b12Cls }}"  tap="squareTap" />

    <Button row="4" col="0" id="b13-3-0" text="{{ b13 }}" class="{{ b13Cls }}" tap="squareTap" />
    <Button row="4" col="1" id="b14-3-1" text="{{ b14 }}" class="{{ b14Cls }}" tap="squareTap" />
    <Button row="4" col="2" id="b15-3-2" text="{{ b15 }}" class="{{ b15Cls }}" tap="squareTap" />
    <Button row="4" col="3" id="b16-3-3" text="{{ b16 }}" class="{{ b16Cls }}" tap="squareTap" />

  </GridLayout>
</Page>
